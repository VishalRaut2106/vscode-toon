{
  "name": "vscode-toon",
  "displayName": "TOON - Token-Efficient Data Format (OFFICIAL)",
  "description": "ðŸ” OFFICIAL TOON Extension by Vishal Raut (TOON Organization Member) - Full language support for TOON (Token-Oriented Object Notation). Features syntax highlighting, validation, JSON conversion, and smart formatting to reduce token usage by 30-60%. âš ï¸ Beware of fake extensions!",
  "version": "0.2.5",
  "publisher": "vishalraut",
  "engines": {
    "vscode": "^1.80.0",
    "node": ">=20.0.0"
  },
  "categories": [
    "Programming Languages",
    "Formatters",
    "Linters"
  ],
  "keywords": [
    "toon",
    "json",
    "llm",
    "serialization",
    "data-format",
    "official",
    "authentic",
    "toon-organization",
    "vishal-raut",
    "token-efficient"
  ],
  "icon": "images/toon.png",
  "galleryBanner": {
    "color": "#1e1e1e",
    "theme": "dark"
  },
  "badges": [
    {
      "url": "https://img.shields.io/badge/Official-TOON%20Extension-blue?style=flat-square",
      "href": "https://github.com/toon-format",
      "description": "Official TOON Extension"
    },
    {
      "url": "https://img.shields.io/badge/Maintained%20by-Vishal%20Raut-green?style=flat-square",
      "href": "https://github.com/vishalraut2106",
      "description": "Maintained by Vishal Raut"
    }
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/vishalraut2106/vscode-toon.git"
  },
  "bugs": {
    "url": "https://github.com/vishalraut2106/vscode-toon/issues"
  },
  "homepage": "https://github.com/vishalraut2106/vscode-toon#readme",
  "license": "MIT",
  "main": "./out/extension.js",
  "activationEvents": [],
  "contributes": {
    "commands": [
      {
        "command": "toon.validate",
        "title": "TOON: Validate"
      },
      {
        "command": "toon.convertToJson",
        "title": "TOON: Convert to JSON"
      },
      {
        "command": "toon.convertFromJson",
        "title": "TOON: Convert from JSON"
      }
    ],
    "languages": [
      {
        "id": "toon",
        "aliases": [
          "TOON",
          "toon"
        ],
        "extensions": [
          ".toon"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "toon",
        "scopeName": "source.toon",
        "path": "./syntaxes/toon.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "toon",
        "path": "./snippets/toon.json"
      }
    ],
    "configuration": {
      "title": "TOON",
      "properties": {
        "toon.validation.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable/disable TOON validation"
        },
        "toon.format.indent": {
          "type": "number",
          "default": 2,
          "description": "Number of spaces for indentation"
        },
        "toon.format.delimiter": {
          "type": "string",
          "enum": [
            ",",
            "\t",
            "|"
          ],
          "default": ",",
          "description": "Delimiter for array values"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "lint": "eslint src --ext ts",
    "lint:fix": "eslint src --ext ts --fix",
    "package": "vsce package",
    "publish": "vsce publish",
    "publish:pre": "vsce publish --pre-release",
    "validate-cicd": "node validate-cicd.js",
    "verify-official": "node verify-official.js",
    "security-audit": "npm audit --audit-level=moderate",
    "outdated": "npm outdated",
    "clean": "rimraf out *.vsix",
    "test": "echo \"No tests specified\" && exit 0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.80.0",
    "@typescript-eslint/eslint-plugin": "^8.18.0",
    "@typescript-eslint/parser": "^8.18.0",
    "@eslint/js": "^9.39.0",
    "eslint": "^9.39.0",
    "typescript": "^5.0.0",
    "@vscode/vsce": "^3.0.0"
  },
  "dependencies": {
    "@toon-format/toon": "^1.0.0"
  }
}
